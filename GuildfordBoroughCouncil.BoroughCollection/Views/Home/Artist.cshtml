@model GuildfordBoroughCouncil.BoroughCollection.Models.BoroughCollectionArtist

@{
    ViewBag.Title = Model.ArtistName;
}

<div class="page-header">
    <h1>@Model.ArtistName</h1>
</div> 

<p>@Model.Description</p>

<h2>Works</h2>
@foreach (var work in Model.Works)
{
    @Html.DisplayFor(w => work)
}
@if (Model.Works.Count() == 0)
{
    <p>No works found.</p>
}

@section HeadScripts
{
    <style>
        .pad-top {
            padding-top: 1rem;
        }

        .article .row {
            margin-bottom: 4rem;
        }
    </style>
}
@section FooterScripts
{
    <script>
        jQuery(function ($) {
            console.log('0');
            $('#zoomart').on('show.bs.modal', function (event) {
                console.log('1');
                var name = $(event.relatedTarget).data('name');
                console.log(name);
                console.log($(this).find('img'));
                $(this).find('img').attr('src', '@Url.Content("~/assets/images/full/")' + name);
            })
        });
    </script>
}
@section Breadcrumb
{
    <li>@Html.ActionLink("Home", "Index")</li>
}
<div id="zoomart" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="//placehold.it/1000x600" class="img-responsive">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>